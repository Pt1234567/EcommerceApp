<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/special_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/special_name"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:text="Scotch Premium"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_thin"
        app:layout_constraintStart_toEndOf="@id/special_img"
        android:layout_marginStart="10dp"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/special_price"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Rs.900"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:fontFamily="@font/poppins_thin"
        app:layout_constraintTop_toBottomOf="@id/special_name"
        app:layout_constraintStart_toStartOf="@id/special_name"
        android:layout_marginTop="2dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/special_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#80F45BC9"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="14dp">

        <ImageView
            android:id="@+id/special_favourite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:src="@drawable/ic_favorite" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>